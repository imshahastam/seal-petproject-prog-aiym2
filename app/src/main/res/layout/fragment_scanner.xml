<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frameLayoutScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scannerView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:frameCornersRadius="15dp"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/coffeeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseTextView"
        android:text="@string/coffee"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countCoffeeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count_coffee_default"
        app:layout_constraintTop_toBottomOf="@id/coffeeTxt"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="50dp"
        android:textColor="@color/blue"/>

